{
	"version": "0.2.0",

	"configurations": [
		{
			"name": "Run Extension in Basic Workspace",

			"args": [
				"--disable-extensions",
				"--extensionDevelopmentPath=${workspaceFolder}/packages/experiments",
				"${workspaceFolder}/workspaces/basic"
			],
			"outFiles": ["${workspaceFolder}/packages/experiments/outputs/**/*.js"],
			"preLaunchTask": "${defaultBuildTask}",
			"request": "launch",
			"type": "extensionHost"
		}
	]
}
